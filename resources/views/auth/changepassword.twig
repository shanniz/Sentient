{% extends '/templates/app.twig' %}

{% block content %}
	
  
<div class="row login-box">
    <div class="col-xs-14 col-sm-14 col-md-4 well well-sm pull-right">
        <legend><i class="glyphicon glyphicon-globe"></i> Change Password </legend>
        
        <div class="panel-body">            
            <form action="{{ path_for('auth.changepassword') }}" method="post" class="form" role="form">
               

                <div class="form-group{{ errors.current_password? ' has-error ': '' }}">
                    <input class="form-control form-group" name="current_password" placeholder="Current Password" type="password" value="{{oldInputData.current_password}}" required />                    
                        <span class='help-block'> {% if errors.current_password %}  {{ errors.current_password | first |replace({"_": " "}) }} {% endif %} </span>                    
                </div>
                <div class="form-group{{ errors.new_password? ' has-error ': '' }}">
                    <input class="form-control form-group" name="new_password" placeholder="New Password" type="password" value="{{oldInputData.new_password}}" required />                    
                        <span class='help-block'> {% if errors.new_password %}  {{ errors.new_password | first |replace({"_": " "})     }} {% endif %} </span>                    
                </div>
                <br>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Change</button>
                </div>
                

                {{csrf.field | raw}}
            </form>
        </div>

    </div>
</div>

{% endblock %}
